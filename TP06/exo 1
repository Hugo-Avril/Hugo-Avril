#include <stdio.h>

const int NB_LIGNES=2;
const int NB_COLONNES=2;


typedef float Matrice[2][2];

int affiche_matrice(Matrice Mat){
    for (int m=0;m<NB_LIGNES;m++){
        for (int n=0;n<NB_COLONNES;n++){
            printf (" %f ",Mat[m][n]);
        }
        printf("\n");
    }
    return 0;
}

int demande_coeff(Matrice Mat){
    float a,b,c,d;
    printf("Quels sont les coefficients a b c d de la matrice suivante ? \n");
    printf(" a b \n");
    printf(" c d \n");
    scanf("%f%f%f%f",&a,&b,&c,&d);
    Mat[0][0]=a;
    Mat[0][1]=b;
    Mat[1][0]=c;
    Mat[1][1]=d;
    return 0;
}


int main(){
    Matrice m1;
    Matrice m2;
    //Matrice M;
    //M[0][0]=1;
    //M[0][1]=2;
    //M[1][0]=3;
    //M[1][1]=4;
    //affiche_matrice(M);
    demande_coeff (m1);
    demande_coeff (m2);
    affiche_matrice(m1);
    printf("\n");
    affiche_matrice(m2);
}
